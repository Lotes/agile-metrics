<Window x:Class="Domo.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Domo.Ui"
        xmlns:dt="clr-namespace:Domo.Ui.DesignTime"
        mc:Ignorable="d"
        Title="Domo" Height="350" Width="525">
    <Window.Resources>
        <dt:ViewModel x:Key="vm"/>
    </Window.Resources>
    <Grid Name="grid" d:DataContext="{StaticResource vm}">
        <TreeView ItemsSource="{Binding Roots}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
    </Grid>
</Window>
